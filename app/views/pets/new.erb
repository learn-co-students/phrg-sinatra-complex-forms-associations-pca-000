<h1>Create a new Pet</h1>

<form action='/pets' method='POST'>
  <label>Name: </label>
  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label>Select an owner: </label>
  <% Owner.all.each do |o| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=o.id%>" id="<%=o.id%>"><%=o.name%></input>
  <% end %>

  <br></br>

  <label>And/or create a new owner! </label>
  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" value="Create Pet" id="Create Pet">

</form>

