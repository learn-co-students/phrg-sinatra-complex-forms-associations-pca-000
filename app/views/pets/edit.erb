<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">

  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>
  <% Owner.all.each do |o| %>
    <input type="radio" name="pet[owner_id]" id="<%=o.id%>" value="<%=o.id%>" <%= 'checked' if @pet.owner.name == o.name %>><%=o.name%></input>
  <% end %>

  <br></br>

  <label>And/or create a new owner! </label>
  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" value="Update Pet" id="Update Pet">

</form>
